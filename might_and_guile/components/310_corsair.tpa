//ROGUE FEATS________________________________________________________________________
//
ACTION_IF FILE_EXISTS_IN_GAME ~d5_rfeat.d5~ THEN BEGIN
  COPY_EXISTING ~kitlist.2da~ ~override~
	COUNT_2DA_COLS k_cols // amount of columns
	READ_2DA_ENTRIES_NOW k_rows k_cols // read all file into memory  
	FOR (k_row = 1; k_row < k_rows; ++k_row) BEGIN // iterate over rows
	  READ_2DA_ENTRY_FORMER k_rows k_row 1 ~k_kit~ // read column value
	  PATCH_IF ~%k_kit%~ STRING_EQUAL_CASE ~D5CORSA~ BEGIN
	    SET cor_row = %k_row%
	    READ_2DA_ENTRY_FORMER k_rows cor_row 9 cor_code // read column value
	  END
	END
  BUT_ONLY
  COPY_EXISTING ~d5rof01.spl~ ~override~
				~d5rof02.spl~ ~override~
				~d5rof03.spl~ ~override~
				~d5rof04.spl~ ~override~
				~d5rof05.spl~ ~override~
				~d5rof06.spl~ ~override~
				~d5rof07.spl~ ~override~
				~d5rof08.spl~ ~override~
				~d5rof09.spl~ ~override~
				~d5rof10.spl~ ~override~
				~d5rof11.spl~ ~override~
				~d5rof12.spl~ ~override~
	LPF CLONE_EFFECT INT_VAR multi_match = 1 match_opcode = 177 match_paramater1 = 16392 parameter1 = %cor_code% STR_VAR resource = ~D5_RFXC~ END
  COPY_EXISTING ~d5_rfd1.spl~ ~override~
	LPF CLONE_EFFECT INT_VAR multi_match = 1 match_opcode = 177 match_paramater1 = 16396 parameter1 = %cor_code% STR_VAR resource = ~D5_RFD2~ END
	LPF CLONE_EFFECT INT_VAR multi_match = 1 match_opcode = 177 match_paramater1 = 16396 parameter1 = %cor_code% STR_VAR resource = ~D5_RFE2~ END
  COPY_EXISTING ~d5_rff1.spl~ ~override~
	LPF CLONE_EFFECT INT_VAR multi_match = 1 match_opcode = 177 match_paramater1 = 16396 parameter1 = %cor_code% STR_VAR resource = ~D5_RFF2~ END
