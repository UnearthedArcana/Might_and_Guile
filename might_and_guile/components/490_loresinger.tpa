/*
  COPY_EXISTING ~kitlist.2da~ ~override~
	COUNT_2DA_ROWS ~7~ "kit_row"
  OUTER_SET kit_row -= 2
  COPY_EXISTING ~K_B_D.2da~ ~override~
		~K_B_E.2da~ ~override~
		~K_B_G.2da~ ~override~
		~K_B_H.2da~ ~override~
